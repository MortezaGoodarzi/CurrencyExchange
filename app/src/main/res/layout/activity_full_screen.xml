<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/black"
    tools:context=".ui.FullScreenActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/Splash_ImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="154dp"
        android:src="@drawable/img_splash"
        app:layout_constraintBottom_toTopOf="@+id/txt_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/price"
        android:textColor="@color/splash_gold"
        android:textSize="33sp"
        android:textStyle="bold"
        android:fontFamily="@font/sans_fa_name_bold"
        app:layout_constraintEnd_toEndOf="@+id/Splash_ImageView"
        app:layout_constraintStart_toStartOf="@+id/Splash_ImageView"
        app:layout_constraintTop_toBottomOf="@+id/Splash_ImageView" />

    <TextView
        android:id="@+id/txt_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="178dp"
        android:text="@string/newest"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_up"
        app:layout_constraintStart_toStartOf="@+id/txt_up"
        app:layout_constraintTop_toBottomOf="@+id/Splash_ImageView" />


</androidx.constraintlayout.widget.ConstraintLayout>